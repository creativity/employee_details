= form_for(@event) do |f|
  %ul
  - @event.errors.full_messages.each do |msg|
    %li.errors= msg
  .field1
    = f.label :title
    %br/
    = f.text_field :title
  .field1
    = f.label :start_time
    %br/
    = f.datetime_select :start_time
  .field1
    = f.label :end_time
    %br/
    = f.datetime_select :end_time
  %br/
  .field1
    = f.label :all_day
    = f.check_box :all_day
  %br/
  .field1
    = f.label :description
    %br/
    = f.cktext_area :description, :id => "datepicker"
  .actions{:style => "margin-top:5px;"}
    = f.submit "submit", :class => "btn btn-info"