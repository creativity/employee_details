!!!
%html
	%head
		%title HindaviEmployee
		= stylesheet_link_tag   "main"
		= javascript_include_tag    "application"
		= csrf_meta_tags
		#header
		#navbar
			%ul
				%li
					=link_to "Employees","#"
				%li
					=link_to "Attendance","#"
				%li
					=link_to "Apraisals","#"
				%li
					=link_to "Leaves","#"
				%li
					=link_to "Events","#"
			%body
				
			- if user_signed_in?
				.sign-out
					= link_to "Sign Out",destroy_user_session_path ,:method=>:delete
		#wrap
			#main
				%p.notice= notice
				%p.alert= alert 
				= yield
		#footer
			= "copy right @hindavi.in" 
			

					